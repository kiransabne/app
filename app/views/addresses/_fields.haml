= fields_for "#{resource.class.name.downcase}[address_attributes]", resource.address do |address_fields|
  .row
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :company)}
        = address_fields.text_field :company, placeholder: I18n.t(:"helpers.placeholder.address.company"), class: 'form-control'
        = form_errors resource, :company
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :name)}
        = address_fields.text_field :name, placeholder: I18n.t(:"helpers.placeholder.address.name"), class: 'form-control'
        = form_errors resource, :name
  .row
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :address)}
        = address_fields.text_area :address, placeholder: I18n.t(:"helpers.placeholder.address.address"), class: 'form-control'
        = form_errors resource, :address
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :country)}
        = address_fields.text_field :country, placeholder: I18n.t(:"helpers.prompt.address.country"), class: 'form-control'
        = form_errors resource, :country
  .row
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :telefon)}
        = address_fields.text_field :telefon, placeholder: I18n.t(:"helpers.placeholder.address.telefon"), class: 'form-control'
        = form_errors resource, :telefon
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :fax)}
        = address_fields.text_field :fax, placeholder: I18n.t(:"helpers.placeholder.address.fax"), class: 'form-control'
        = form_errors resource, :fax
  .row
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :email)}
        = address_fields.text_field :email, placeholder: I18n.t(:"helpers.placeholder.address.email"), class: 'form-control'
        = form_errors resource, :email
    .col-xs-12.col-md-6
      .form-group{class: form_error?(resource, :website)}
        = address_fields.text_field :website, placeholder: I18n.t(:"helpers.placeholder.address.website"), class: 'form-control'
        = form_errors resource, :website
