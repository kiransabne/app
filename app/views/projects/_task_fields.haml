.col-xs-12.col-md-6
  .row.fields
    .col-xs-12.col-md-10
      .form-group{class: form_error?(fields.object, :name)}
        = fields.text_field :name, placeholder: I18n.t(:"helpers.placeholder.task.name"), class: 'form-control'
        = form_errors fields.object, :name

    .col-xs-12.col-md-2
      .form-group.pull-right
        = link_to_delete_fields fields, name: I18n.t(:"actions.delete"), class: "btn btn-danger" do
          %i.fa.fa-trash

    .clearfix
    .col-xs-12.visible-sm.visible-xs
      %hr
