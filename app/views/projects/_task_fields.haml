.col-xs-12.col-md-6.fields
  .form-group{class: form_error?(fields.object, :name)}
    .input-group
      = fields.text_field :name, placeholder: I18n.t(:"helpers.placeholder.name"), class: 'form-control'
      %span.input-group-btn
        = link_to_delete_fields fields, name: I18n.t(:"actions.delete"), class: "btn btn-danger" do
          %i.fa.fa-trash
    = form_errors fields.object, :name

  .clearfix
