%tr
  %td
    = project.name
  %td
    = project.rate
  %td
    = project.customer.fullname
  %td
    .btn-group
      = link_to edit_project_path(project), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
        %i.fa.fa-edit
      %a.btn.btn-danger.btn-sm{href: project_path(project), title: I18n.t(:"actions.delete"), data: { method: "DELETE", notyConfirm: I18n.t(:"messages.confirm.delete") } }
        %i.fa.fa-trash
