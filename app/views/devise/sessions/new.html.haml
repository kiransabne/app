- content_for :title do
  = I18n.t(:"meta.title.sign_in")
.row
  .col-xs-12
    .cbox.cbox-login
      .well
        %h1=I18n.t(:"headlines.sign_in")

        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

          .form-group
            = f.email_field :email, required: false, autofocus: true, placeholder: I18n.t(:"helpers.placeholder.user.email"), class: 'form-control'
          .form-group
            = f.password_field :password, required: false, placeholder: I18n.t(:"helpers.placeholder.user.password"), class: 'form-control'

          - if devise_mapping.rememberable?
            .checkbox
              = f.check_box :remember_me
              %label{for: "user_remember_me"}
                = I18n.t(:"helpers.label.user.remember_me")

          .btn-group-responsive.text-right
            %button.btn.btn-lg.btn-primary.btn-loading{data: {loading: {text: I18n.t(:"actions.loading")}}}
              = I18n.t(:"actions.sign_in")
          .clearfix

      .text-center
        %a.btn.btn-link{href: new_password_path(resource_name)}
          = I18n.t(:"actions.reset_password")
