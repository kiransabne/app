%tr
  %td=customer.name
  %td=simple_format(customer.address)
  %td=communications(customer)
  %td
    .btn-group
      = link_to edit_customer_path(customer), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
        %i.fa.fa-edit
      %a.btn.btn-danger.btn-sm{href: customer_path(customer), title: I18n.t(:"actions.delete"), data: { method: "DELETE", notyConfirm: I18n.t(:"messages.customer.confirm.delete") } }
        %i.fa.fa-trash