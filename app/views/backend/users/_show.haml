%tr
  %td
    = user.id
  %td
    = user.email
  %td
    - if user.current_sign_in_at.blank?
      = I18n.t(:"user.current_sign_in_at.empty")
    - else
      = time_ago_in_words(user.current_sign_in_at)
      = "(#{l(user.current_sign_in_at, format: :dt_default)})"
  %td
    = t user.admin?.to_s
  %td
    .btn-group
      = link_to edit_backend_user_path(user), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
        %i.fa.fa-edit
      %a.btn.btn-danger.btn-sm{href: backend_user_path(user), title: I18n.t(:"actions.delete"), data: { method: "DELETE", notyConfirm: I18n.t(:"messages.confirm.delete") } }
        %i.fa.fa-trash
