window.App.PdfViewer = {};

window.App.PdfViewer.renderPage = function($viewer, $promise, callback) {
  $promise.then(function(page) {
    var $canvas = $('<canvas/>');
    $canvas.hide();
    $viewer.append($canvas);

    var canvas = $canvas[0];
    var context = canvas.getContext('2d');

    var viewport = page.getViewport(2.0);
    canvas.height = viewport.height;
    canvas.width = viewport.width;

    var renderContext = {
      canvasContext: context,
      viewport: viewport
    }

    page.render(renderContext).then(function() {
      $canvas.fadeIn('slow');
      callback();
    });
  });
};

window.App.PdfViewer.renderPages = function($viewer, pdf, callback, index) {
  if (index === undefined) {
    index = 1;
  }
  App.PdfViewer.renderPage($viewer, pdf.getPage(index), function() {
    index++;
    if (index <= pdf.pdfInfo.numPages) {
      App.PdfViewer.renderPages($viewer, pdf, callback, index);
    } else {
      callback();
    }
  });
};

window.App.PdfViewer.initViewer = function(index, viewers, callback) {
  var $viewer = $(viewers[index]);
  App.PdfViewer.loading($viewer);
  $viewer.find('canvas').fadeOut('slow', function() {
    $(this).remove();
  });
  var pdfPath = $viewer.data('pdfPath');
  if (pdfPath !== undefined) {
    PDFJS.getDocument(pdfPath).then(function(pdf) {
      App.PdfViewer.renderPages($viewer, pdf, function() {
        App.PdfViewer.finish($viewer);
        index++
        if (index < viewers.length) {
          App.PdfViewer.initViewer(index, viewers);
        }
      });
    });
  }
};

window.App.PdfViewer.loading = function($viewer) {
  var $loader = $("<div/>")
  $loader.addClass('loader').hide();
  $viewer.append($loader);
  $loader.fadeIn('slow');
};

window.App.PdfViewer.finish = function($viewer) {
  $viewer.find('.loader').fadeOut('slow', function() {
    $(this).remove();
  });
};

window.App.PdfViewer.load = function() {
  var viewers = $('.pdf-viewer')
  if (viewers.length > 0) {
    PDFJS.workerSrc = "<%= asset_path('pdf.worker.js') %>";
    App.PdfViewer.initViewer(0, viewers);
  }
};

(function() {
  $(function() {
    App.PdfViewer.load();
  });
}).call(this);